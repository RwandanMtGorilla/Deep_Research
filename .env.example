# ==================================================
# Deep Research Configuration
# Copy this file to .env and fill in your values
# ==================================================

# --- API Keys (required) ---
OPENAI_API_KEY=sk-xxx
TAVILY_API_KEY=tvly-xxx

# --- Model Configuration ---
# Format: "provider:model_name"
# Examples: "openai:gpt-5", "anthropic:claude-sonnet-4-20250514"
DEFAULT_MODEL=openai:gpt-5
SUPERVISOR_MODEL=openai:gpt-5
SUMMARIZATION_MODEL=openai:gpt-5
COMPRESS_MODEL=openai:gpt-5
WRITER_MODEL=openai:gpt-5

# --- Model Token Limits ---
COMPRESS_MODEL_MAX_TOKENS=32000
REPORT_WRITER_MODEL_MAX_TOKENS=40000
DRAFT_WRITER_MODEL_MAX_TOKENS=32000

# --- API Base URL (optional, leave empty for official endpoints) ---
# For custom API proxy, e.g. "https://api.your-proxy.com/v1"
OPENAI_BASE_URL=
ANTHROPIC_BASE_URL=

# --- Research Parameters ---
MAX_RESEARCHER_ITERATIONS=15
MAX_CONCURRENT_RESEARCHERS=3
MAX_CONTEXT_LENGTH=250000
